<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_seat"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_normal">

    </ImageView>

    <ImageView
        android:id="@+id/img_seat_selected"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_normal_selected"
        android:visibility="invisible">

    </ImageView>

    <ImageView
        android:id="@+id/img_seat_booked"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_normal_booked"
        android:visibility="invisible">

    </ImageView>

    <ImageView
        android:id="@+id/img_seat_reserved"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_is_reserved"
        android:visibility="invisible">

    </ImageView>

</RelativeLayout>