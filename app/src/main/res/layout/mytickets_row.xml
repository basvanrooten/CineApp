<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/CineAppListViewItemBackground">

        <ImageView
            android:id="@+id/myTicketQRCode"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/myTicketTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myTicketTime"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/myTicketTime"
            android:layout_marginTop="23dp"
            android:text="Film Title"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/myTicketDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myTicketTitle"
            android:layout_centerHorizontal="true"
            android:text="Date"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/myTicketTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myTicketDate"
            android:layout_alignStart="@+id/myTicketDate"
            android:layout_centerVertical="true"
            android:text="Time"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>