<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/CineAppListViewItemBackground">

        <ImageView
            android:id="@+id/listFilmImg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/listFilmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/listFilmImg"
            android:layout_toRightOf="@+id/listFilmImg"
            android:text="@string/list_film_title"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/ListFilmDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listFilmTitle"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/listFilmTitle"
            android:layout_below="@+id/listFilmTitle"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="13dp"
            android:width="50dp"
            android:height="93dp"
            android:text="@string/list_film_description"
            android:textColor="@android:color/background_light"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>