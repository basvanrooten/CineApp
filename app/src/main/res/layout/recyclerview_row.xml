<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/CineAppListViewItemBackground">

        <ImageView
            android:id="@+id/listFilmImg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/listFilmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/listFilmImg"
            android:layout_toRightOf="@+id/listFilmImg"
            android:text="Film Title"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/listFirmGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/listFilmTitle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:text="Genre"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/listFilmDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listFilmTitle"
            android:layout_alignStart="@+id/listFilmTitle"
            android:layout_below="@+id/listFilmTitle"
            android:layout_marginTop="14dp"
            android:text="Description"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

        <Button
            android:id="@+id/listFilmInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@color/CineAppListViewItemButtomBackground"
            android:text="Info"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>