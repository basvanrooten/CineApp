<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CineAppBackground"
    tools:context="com.avans2018.klasd.cineapp.presentation_layer.MyTicketsDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@color/CineAppListViewItemBackground">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/CineAppBackground"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ticketQRCodeBig"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@color/CineAppBackground"
                    android:paddingBottom="20dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    tools:layout_editor_absoluteX="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/CineAppListViewItemBackground"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <TextView
                        android:id="@+id/ticketDetailMovieTitle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/my_ticket_detail_movie"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ticketDetailDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_ticket_detail_date"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/ticketDetailTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_ticket_detail_time"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/ticketDetailTheater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_ticket_detail_theater"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/ticketDetailSeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_ticket_detail_seat"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/ticketDetailType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/my_ticket_detail_type"
                        android:textColor="@android:color/background_light" />

                </LinearLayout>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
